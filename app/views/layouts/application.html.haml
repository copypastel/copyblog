%html{ :xmlns => 'http://www.w3.org/199/xhtml', :'xml:lang' => 'en', :lang => 'en'}
  %head
    %meta{ :'http-equiv' => 'content-type', :content => 'text/html', :charset => 'UTF-8'}
    %title= controller.controller_name + ': ' + controller.action_name
    = stylesheet_link_tag 'awesome'
    = javascript_include_tag 'jquery-1.3.2.js'
  %body
    #title
      copy
      %span{ :id => 'click'}> pastel
      %span{ :id => 'cover'}
        
    = yield
    
    %script
      var words = ['code', 'blog', 'tweet', 'pastel', 'hack', 'play']
      function rand( limit ){
      return Math.floor( Math.random()*limit );
      }
      $('#cover').animate({height: '100px'}, 900, 'swing', function(){$('#click').html(words[rand(words.length)]);});
      //alert(words[rand(words.length)]);
      //setTimeout("$('#cover').animate({height: '200px'}, 900, 'swing', function(){$('#click').html('');});",500);
      setTimeout("$('#cover').animate({height: 0}, 900);",1000);
