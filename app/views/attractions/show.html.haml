#wrapper
  #avatar_wrap{ :style => 'width: 75px; float: left; margin-right: 30px;'}
    %div{ :style => 'font-weight: bold; text-align: center; font-size: 1.5em;'}
      %i ecin
    %div{ :style => 'background: url(images/backing.png); height: 17px; color: white; float: left; text-align: center; font-size: 0.9em; font-weight: bold; margin-left: 7px;'}
      %img{ :src => 'images/tag_left.png', :style => 'float: left;' }
      %span{ :style => 'float: left; padding-left: 5px; padding-right: 5px;' }= @attraction.verb
      %img{ :src => 'images/tag_right.png', :style => 'float: left;'}
    .date{ :style => 'margin-top: 30px;'}
      %p= @attraction.when.day
      %p{ :style => 'color: crimson;'}= @attraction.when.month
      %p= @attraction.when.year
  #post{ :style => 'line-height: 1.4em;' }= @attraction.body
  #post_stats
    %p{ :style => 'font-size: 3m; font-weight: bold; margin-bottom: 20px; color: crimson;' }
      %i= @attraction.title
    - if @attraction.outline
      %p{ :style => 'font-size: 2em; font-weight: bold; margin-bottom: 20px;'} Outline:
      %div{ :style => 'float: left; margin-right: 10px; font-weight: bold; font-size: 1.3em;' }
      - @attraction.outline.each do |title, depth|
        %p= '/' * depth 
      - @attraction.outline.each do |title, depth|
        %p
          %a{ :href => '#' + title.gsub(' ', '_') }= title
    %p{ :style => 'font-size: 2em; font-weight: bold; margin-bottom: 20px;' }
      %a{ :href => '#comments' }>= @attraction.comments.size
      Comments
  %div{ :style => 'width: 100%; height: 1px; float: left; background: white;' }
  %div{ :style => 'width: 500px; float: left' }
    %input{ :type => 'text', :style => 'width: 480px; height: 40px; background: #eee; color: orange; border: 0;  margin-bottom: 10px; font-size: 1.05em; font-weight: bold; margin-left: 105px; padding: 10px;', :value => 'nickname'}
    %textarea{ :style => 'width: 480px; height: 40px; border: 0; background: #eee; font-size: 1.05em; color: #333; padding: 10px; font-weight: bold; float: left; margin-left: 105px;', :id => 'comment', :onFocus => '$("#comment").animate( { height: 200 }, 500);' } comment